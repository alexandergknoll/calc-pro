<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/background_material_dark">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="0"
        android:id="@+id/textView"
        android:layout_gravity="left|top"
        android:background="#ff000000"
        android:textSize="50dp"
        android:padding="10dp"
        android:layout_row="19"
        android:layout_column="0"
        android:textColor="#ffffffff"
        android:textAlignment="viewEnd" />

    <TableLayout
        android:id="@+id/TableLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="*"
        android:layout_gravity="fill_vertical"
        android:paddingTop="90dp" >

        <TableRow android:layout_gravity="bottom"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="fill_parent">

            <Button
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:text="AC"
                android:id="@+id/calcAC"
                android:layout_gravity="bottom"
                android:textSize="40dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="calcReset"
                android:backgroundTint="#ffff0300" />

        </TableRow>

        <TableRow android:layout_gravity="bottom"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="fill_parent">

            <Button
                android:id="@+id/calc7"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:text="7"
                android:layout_gravity="bottom"
                android:textSize="40dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="calcPressNum"
                android:backgroundTint="#fff8f8f8" />

            <Button
                android:id="@+id/calc8"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:text="8"
                android:layout_gravity="bottom"
                android:textSize="40dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="calcPressNum"
                android:backgroundTint="#fff8f8f8" />

            <Button
                android:id="@+id/calc9"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:text="9"
                android:layout_gravity="bottom"
                android:textSize="40dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="calcPressNum"
                android:backgroundTint="#fff8f8f8" />

            <Button
                android:id="@+id/calcDivide"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:text="/"
                android:layout_gravity="bottom"
                android:textSize="40dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="calcOperator"
                android:backgroundTint="#ffa5a5a5" />

        </TableRow>

        <TableRow android:layout_gravity="bottom"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="fill_parent">

            <Button
                android:id="@+id/calc4"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:text="4"
                android:layout_gravity="bottom"
                android:textSize="40dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="calcPressNum"
                android:backgroundTint="#fff8f8f8" />

            <Button
                android:id="@+id/calc5"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:text="5"
                android:layout_gravity="bottom"
                android:textSize="40dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="calcPressNum"
                android:backgroundTint="#fff8f8f8" />

            <Button
                android:id="@+id/calc6"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:text="6"
                android:layout_gravity="bottom"
                android:textSize="40dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="calcPressNum"
                android:backgroundTint="#fff8f8f8" />

            <Button
                android:id="@+id/calcMultiply"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:text="X"
                android:layout_gravity="bottom"
                android:textSize="40dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="calcOperator"
                android:backgroundTint="#ffa5a5a5" />

        </TableRow>

        <TableRow android:layout_gravity="bottom"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="fill_parent">

            <Button
                android:id="@+id/calc1"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:text="1"
                android:layout_gravity="bottom"
                android:textSize="40dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="calcPressNum"
                android:backgroundTint="#fff8f8f8" />

            <Button
                android:id="@+id/calc2"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:text="2"
                android:layout_gravity="bottom"
                android:textSize="40dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="calcPressNum"
                android:backgroundTint="#fff8f8f8" />

            <Button
                android:id="@+id/calc3"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:text="3"
                android:layout_gravity="bottom"
                android:textSize="40dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="calcPressNum"
                android:backgroundTint="#fff8f8f8" />

            <Button
                android:id="@+id/calcSubtract"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:text="-"
                android:layout_gravity="bottom"
                android:textSize="40dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="calcOperator"
                android:backgroundTint="#ffa5a5a5" />

        </TableRow>

        <TableRow android:layout_gravity="bottom"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="fill_parent">

            <Button
                android:id="@+id/calc0"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:text="0"
                android:layout_gravity="bottom"
                android:textSize="40dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="calcPressNum"
                android:backgroundTint="#fff8f8f8" />

            <Button
                android:id="@+id/calcDecimal"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:text="."
                android:layout_gravity="bottom"
                android:textSize="40dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="calcPressDecimal"
                android:backgroundTint="#fff8f8f8" />

            <Button
                android:id="@+id/calcEquals"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:text="="
                android:layout_gravity="bottom"
                android:textSize="40dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="calcOperator"
                android:backgroundTint="#ff11ff00" />

            <Button
                android:id="@+id/calcPlus"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:text="+"
                android:layout_gravity="bottom"
                android:textSize="40dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="calcOperator"
                android:backgroundTint="#ffa5a5a5" />

        </TableRow>

    </TableLayout>

</RelativeLayout>