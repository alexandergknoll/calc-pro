<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/background_material_dark">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="0"
        android:id="@+id/textView"
        android:layout_gravity="left|top"
        android:background="#ff000000"
        android:textSize="50dp"
        android:padding="10dp"
        android:layout_row="19"
        android:layout_column="0"
        android:textColor="#ffffffff"
        android:textAlignment="viewEnd" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="AC"
        android:id="@+id/calcAC"
        android:layout_gravity="bottom|left|right|top"
        android:textSize="40dp"
        android:textColor="#ff000000"
        android:layout_row="0"
        android:layout_column="0"
        android:textStyle="bold"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:onClick="calcReset" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="376dp"
        android:columnCount="5"
        android:rowCount="5"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/calc"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/calc7"
            android:layout_gravity="bottom|left|right|top"
            android:textSize="40dp"
            android:textColor="#ff000000"
            android:layout_row="0"
            android:layout_column="0"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="calcPressNum" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/calc8"
            android:layout_gravity="bottom|left|right|top"
            android:textSize="40dp"
            android:textColor="#ff000000"
            android:layout_row="0"
            android:layout_column="1"
            android:textStyle="bold"
            android:onClick="calcPressNum" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/calc9"
            android:layout_gravity="bottom|left|right|top"
            android:textSize="40dp"
            android:textColor="#ff000000"
            android:layout_row="0"
            android:layout_column="2"
            android:textStyle="bold"
            android:onClick="calcPressNum" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/calcDivide"
            android:layout_gravity="bottom|left|right|top"
            android:textSize="40dp"
            android:layout_row="0"
            android:layout_column="4"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:clickable="true"
            android:onClick="calcOperator" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/calc4"
            android:layout_gravity="bottom|left|right|top"
            android:textSize="40dp"
            android:textColor="#ff000000"
            android:layout_row="1"
            android:layout_column="0"
            android:textStyle="bold"
            android:onClick="calcPressNum" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/calc5"
            android:layout_gravity="bottom|left|right|top"
            android:textSize="40dp"
            android:textColor="#ff000000"
            android:layout_row="1"
            android:layout_column="1"
            android:textStyle="bold"
            android:onClick="calcPressNum" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/calc6"
            android:layout_gravity="bottom|left|right|top"
            android:textSize="40dp"
            android:textColor="#ff000000"
            android:layout_row="1"
            android:layout_column="2"
            android:textStyle="bold"
            android:onClick="calcPressNum" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:id="@+id/calcMultiply"
            android:layout_gravity="bottom|left|right|top"
            android:textSize="40dp"
            android:layout_row="1"
            android:layout_column="4"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:clickable="true"
            android:onClick="calcOperator" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/calc1"
            android:layout_gravity="bottom|left|right|top"
            android:textSize="40dp"
            android:textColor="#ff000000"
            android:layout_row="3"
            android:layout_column="0"
            android:textStyle="bold"
            android:onClick="calcPressNum" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/calc2"
            android:layout_gravity="bottom|left|right|top"
            android:textSize="40dp"
            android:textColor="#ff000000"
            android:layout_row="3"
            android:layout_column="1"
            android:textStyle="bold"
            android:onClick="calcPressNum" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/calc3"
            android:layout_gravity="bottom|left|right|top"
            android:textSize="40dp"
            android:textColor="#ff000000"
            android:layout_row="3"
            android:layout_column="2"
            android:textStyle="bold"
            android:onClick="calcPressNum" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/calcSubtract"
            android:layout_gravity="bottom|left|right|top"
            android:textSize="40dp"
            android:layout_row="3"
            android:layout_column="4"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:clickable="true"
            android:onClick="calcOperator" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/calc0"
            android:layout_gravity="bottom|left|right|top"
            android:textSize="40dp"
            android:textColor="#ff000000"
            android:layout_row="4"
            android:layout_column="0"
            android:textStyle="bold"
            android:onClick="calcPressNum" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/calcPoint"
            android:layout_gravity="bottom|left|right|top"
            android:textSize="40dp"
            android:textColor="#ff000000"
            android:layout_row="4"
            android:layout_column="1"
            android:textStyle="bold"
            android:onClick="calcPressNum" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/calcEquals"
            android:layout_gravity="bottom|left|right|top"
            android:textSize="40dp"
            android:layout_row="4"
            android:layout_column="2"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="calcOperator" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/calcPlus"
            android:layout_gravity="bottom|left|right|top"
            android:textSize="40dp"
            android:layout_row="4"
            android:layout_column="4"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:clickable="true"
            android:onClick="calcOperator" />

    </GridLayout>

</RelativeLayout>
